# Tennis Predictor 101 Environment Variables
# Copy this file to .env and fill in your actual values

# API Keys
ODDS_API_KEY=your_odds_api_key_here
WEATHER_API_KEY=your_openweather_api_key_here
ATP_API_KEY=your_atp_api_key_here
WTA_API_KEY=your_wta_api_key_here

# Database Configuration
DATABASE_URL=postgresql://username:password@localhost:5432/tennis_predictor
REDIS_URL=redis://localhost:6379/0
INFLUXDB_URL=http://localhost:8086

# Environment Settings
TENNIS_ENV=development  # development, staging, production
LOG_LEVEL=INFO

# Monitoring & Tracking
WANDB_API_KEY=your_wandb_api_key_here
MLFLOW_TRACKING_URI=http://localhost:5000

# Security
SECRET_KEY=your_secret_key_for_api_authentication
JWT_SECRET=your_jwt_secret_for_token_authentication

# Performance Settings
MAX_WORKERS=8
BATCH_SIZE=1000
CACHE_TTL=300

# Feature Flags
ENABLE_REAL_TIME_PREDICTIONS=true
ENABLE_MARKET_ANALYSIS=true
ENABLE_ENSEMBLE_MODELS=true
ENABLE_GPU_ACCELERATION=false

# Betting Configuration (for paper trading)
MAX_BET_FRACTION=0.05
MIN_EDGE_REQUIRED=0.03
STARTING_BANKROLL=10000

# Data Collection Settings
MAX_HISTORICAL_YEARS=20
UPDATE_FREQUENCY_MINUTES=5
RETRY_ATTEMPTS=3
TIMEOUT_SECONDS=30